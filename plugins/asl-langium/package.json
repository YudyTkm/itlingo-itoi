{
    "name": "asl-langium",
    "displayName": "Asl",
    "description": "Language support for the Asl language",
    "version": "0.1.2",
    "repository": {
        "url": "https://github.com/genlike/asl-langium.git"
    },
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "asl",
                "aliases": [
                    "asl",
                    "asl"
                ],
                "extensions": [
                    ".asl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "asl",
                "scopeName": "source.asl",
                "path": "./syntaxes/asl.tmLanguage.json"
            }
        ],
        "submenus": [
            {
                "id": "asl.submenu",
                "label": "Convert ASL file to"
            }
        ],
        "commands": [
            {
                "command": "asl.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "ASL Diagram"
            },
            {
                "command": "asl.diagram.fit",
                "title": "Fit to Screen",
                "category": "ASL Diagram"
            },
            {
                "command": "asl.diagram.center",
                "title": "Center selection",
                "category": "ASL Diagram"
            },
            {
                "command": "asl.diagram.delete",
                "title": "Delete selected element",
                "category": "ASL Diagram"
            },
            {
                "command": "asl.diagram.export",
                "title": "Export diagram to SVG",
                "category": "ASL Diagram"
            },
            {
                "command": "genio.export",
                "title": "Genio"
            },
            {
                "command": "powerapps.export",
                "title": "PowerApps"
            },
            {
                "command": "asl.export",
                "title": "Asl"
            },
            {
                "command": "zip.import",
                "title": "Import to ASL"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "asl.diagram.open",
                    "when": "editorLangId == 'asl'"
                },
                {
                    "command": "asl.diagram.fit",
                    "when": "asl-diagram-focused"
                },
                {
                    "command": "asl.diagram.center",
                    "when": "asl-diagram-focused"
                },
                {
                    "command": "asl.diagram.delete",
                    "when": "asl-diagram-focused"
                },
                {
                    "command": "asl.diagram.export",
                    "when": "asl-diagram-focused"
                }
            ],
            "explorer/context": [
                {
                    "command": "asl.diagram.open",
                    "when": "resourceExtname == '.asl'",
                    "group": "navigation"
                },
                {
                    "submenu": "asl.submenu",
                    "when": "resourceExtname == '.asl'",
                    "group": "asl.group"
                },
                {
                    "command": "zip.import",
                    "when": "explorerResourceIsFolder",
                    "group": "navigation"
                }
            ],
            "asl.submenu": [
                {
                    "command": "genio.export"
                },
                {
                    "command": "powerapps.export"
                },
                {
                    "command": "asl.export"
                }
            ]
        },
        "keybindings": [
            {
                "key": "alt+f",
                "mac": "alt+f",
                "command": "asl.diagram.fit",
                "when": "asl-diagram-focused"
            },
            {
                "key": "alt+c",
                "mac": "alt+c",
                "command": "asl.diagram.center",
                "when": "asl-diagram-focused"
            },
            {
                "key": "alt+e",
                "mac": "alt+e",
                "command": "asl.diagram.export",
                "when": "asl-diagram-focused"
            },
            {
                "key": "delete",
                "mac": "delete",
                "command": "asl.diagram.delete",
                "when": "asl-diagram-focused"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:asl"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "asl-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "chalk": "~4.1.2",
        "chevrotain": "~10.4.2",
        "commander": "~10.0.0",
        "concat-map": "^0.0.1",
        "docxtemplater": "^3.37.12",
        "langium": "^1.1.0",
        "langium-sprotty": "^1.0.0",
        "package.json": "^2.0.1",
        "sprotty-elk": "^0.13.0",
        "sprotty-vscode": "^0.5.0",
        "vscode-languageclient": "^8.0.2",
        "vscode-languageserver": "~8.0.2",
        "vscode-uri": "~3.0.7"
    },
    "devDependencies": {
        "@types/node": "~16.18.11",
        "@types/vscode": "1.50.0",
        "@typescript-eslint/eslint-plugin": "~5.51.0",
        "@typescript-eslint/parser": "~5.51.0",
        "eslint": "~8.33.0",
        "langium-cli": "~1.1.0",
        "source-map-loader": "^3.0.0",
        "sprotty-vscode": "^0.5.0",
        "typescript": "~4.9.5",
        "webpack": "^5.64.2",
        "webpack-cli": "^4.9.1"
    }
}
