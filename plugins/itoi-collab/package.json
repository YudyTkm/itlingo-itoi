{
  "name": "itoi-collab",
  "displayName": "itoi-collab",
  "description": "Collaboration plugin for ITOI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [

  ],
  "config": {
    "itoiColab": false
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "itoi-collab.startColab",
        "title": "Start Collaboration Session"
      },
      {
        "command": "itoi-collab.joinColab",
        "title": "Join Collaboration Session"
      },
      {
        "command": "itoi-collab.stopColab",
        "title": "Stop Collaboration Session"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "!editorReadonly && editorFocus && !itoi-collab.showStop",
          "command": "itoi-collab.startColab"
        },
        {
          "when": "!itoi-collab.showStop",
          "command": "itoi-collab.joinColab"
        },
        {
          "when": "!editorReadonly && editorFocus && itoi-collab.showStop",
          "command": "itoi-collab.stopColab"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@fluidframework/tinylicious-client": "^1.3.6",
    "fluid-framework": "^1.3.6",
    "uuid": "latest"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "ts-loader": "^9.4.2",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2",
    "@vscode/test-electron": "^2.3.0"
  }
}
